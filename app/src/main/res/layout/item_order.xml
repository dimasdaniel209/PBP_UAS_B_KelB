<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="order"
            type="com.laundry.laundry.model.Order"/>
        <variable
            name="item"
            type="com.laundry.laundry.ui.home.HomeFragment"/>
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_marginStart="5dp"
            android:id="@+id/id"
            android:text="@{order.id}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_marginStart="5dp"
            android:id="@+id/jumlah_pakaian"
            android:text="@{order.stringJumlah_pakaian}"
            android:textAllCaps="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_marginStart="5dp"
            android:id="@+id/berat"
            android:text="@{order.stringBerat}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_marginStart="5dp"
            android:id="@+id/layanan"
            android:text="@{order.layanan}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B3B2B2"/>

    </LinearLayout>
</layout>


